{
    "list-context.product-list#product-slider": {
        "blocks": ["product-summary.shelf#product-slider"],
        "children": ["slider-layout#product-slider"]
    },
    "slider-layout#product-slider": {
        "props": {
            "itemsPerPage": {
                "phone": 1,
                "tablet": 3,
                "desktop": 5,
                "(min-width: 1400px)": 6
            },
            "infinite": true,
            "showNavigationArrows": "desktopOnly",
            "blockClass": "product-slider",
            "centerMode": {
                "phone": "to-the-left",
                "tablet": "disabled",
                "desktop": "disabled"
            }
        }
    }
}
